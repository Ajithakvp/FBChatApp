<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FBChatApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/RoseRed</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="ProgressBarDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/RoseRed</item>
        <item name="fontFamily">@font/latest</item>
        <item name="colorButtonNormal">@color/RoseRed</item>
        <item name="android:windowBackground">@drawable/progress_dialog</item>
        <item name="colorAccent">@color/blue</item>
        <item name="buttonBarButtonStyle">@style/ProgressBarDialogStyle</item>
    </style>




    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/Radio</item>
        <item name="fontFamily">@font/latest</item>
        <item name="colorButtonNormal">@color/Radio</item>
        <item name="android:windowBackground">@drawable/edittext_background</item>
        <item name="colorAccent">@color/Radio</item>
        <item name="buttonBarButtonStyle">@style/MyButtonStyle</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/Radio</item>
    </style>


    <style name="ProgressBarDialogStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/Burgundy</item>
    </style>

    <!--  Ratingbar  -->

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/AshGray</item>
        <item name="colorControlActivated">@color/RoseRed</item>
    </style>

</resources>